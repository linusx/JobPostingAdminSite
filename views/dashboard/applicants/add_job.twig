<div class="row">
    <div class="col-xs-12">
            <div class="col-xs-12 form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="title" placeholder="Job Title"/>
            </div>

            <div class="col-xs-12 col-md-6 form-group no-col-padding">
                <div class="col-xs-12">
                    <label>Start Date</label>
                </div>
                <div class="col-xs-6 form-group">
                    <select class="form-control" name="start_month">
                        <option value="01">January</option>
                        <option value="02">February</option>
                        <option value="03">March</option>
                        <option value="04">April</option>
                        <option value="05">May</option>
                        <option value="06">June</option>
                        <option value="07">July</option>
                        <option value="08">August</option>
                        <option value="09">Sepetember</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <div class="col-xs-6">
                    <select class="form-control" name="start_year">
                        {% for i in "now"|date("Y").."now -50 years"|date("Y") %}
                            <option value="{{  ("now -"~(loop.index-1)~" years")|date("Y") }}">{{ ("now -"~(loop.index-1)~" years")|date("Y") }}</option>
                        {% endfor %}
                    </select>
                </div>
                <input type="hidden" name="start_date" id="start-date" value="" />
            </div>

            <div class="col-xs-12 col-md-6 form-group no-col-padding">
                <div class="col-xs-12">
                    <label>End Date</label>
                </div>
                <div class="col-xs-6 form-group">
                    <select class="form-control" name="end_month">
                        <option value="01">January</option>
                        <option value="02">February</option>
                        <option value="03">March</option>
                        <option value="04">April</option>
                        <option value="05">May</option>
                        <option value="06">June</option>
                        <option value="07">July</option>
                        <option value="08">August</option>
                        <option value="09">Sepetember</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <div class="col-xs-6">
                    <select class="form-control" name="end_year">
                    {% for i in "now"|date("Y").."now -50 years"|date("Y") %}
                        <option value="{{  ("now -"~(loop.index-1)~" years")|date("Y") }}">{{ ("now -"~(loop.index-1)~" years")|date("Y") }}</option>
                    {% endfor %}
                    </select>
                </div>
                <input type="hidden" name="end_date" id="end-date" value="" />
            </div>

            <div class="col-xs-12 form-group">
                <label>Company Name</label>
                <input class="form-control" type="text" name="company_name" placeholder="Company Name"/>
            </div>

            <div class="col-xs-12 col-md-6 form-group">
                <label>Company City</label>
                <input class="form-control" type="text" name="company_city" placeholder="Company City"/>
            </div>

            <div class="col-xs-12 col-md-6 form-group">
                <label>Company State</label>
                <select class="form-control" name="company_state">
                    <option value="0">-- Select State --</option>
                    {% for abbr,state in states %}
                        <option value="{{ abbr }}">{{ state }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-xs-12 form-group">
                <label>Description</label>
                <textarea class="form-control" name="description" placeholder="Description"></textarea>
            </div>
    </div>
</div>